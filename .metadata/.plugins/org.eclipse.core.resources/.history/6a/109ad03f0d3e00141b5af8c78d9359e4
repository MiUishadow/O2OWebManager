package com.o2oweb.service;

import javax.annotation.Resource;

import org.hibernate.criterion.DetachedCriteria;
import org.springframework.stereotype.Component;

import com.o2oweb.bo.RequestParamBean;
import com.o2oweb.common.dao.support.Page;
import com.o2oweb.dao.ImageDao;
import com.o2oweb.dao.imageDao;
import com.o2oweb.entity.User;

@Component("imageService")
public class ImageService {

	private ImageDao imageDao;

	public void save(Image user) {
		this.imageDao.save(user);
	}

	public void remove(User user) {
		this.imageDao.remove(user);
	}
	

	public void update(User user) {
		this.imageDao.update(user);
	}

	public User getimageDao(String loginMes, char type) {
		return imageDao.getUser(loginMes, type);
	}

	public Page findPageBean(RequestParamBean paramBean) {
		DetachedCriteria detachedCriteria = DetachedCriteria
				.forClass(User.class);
		if (paramBean == null) {
			return null;
		}
		return this.imageDao.pagedQuery(detachedCriteria, paramBean.getStart(),
				paramBean.getLimit());
	}

	@Resource
	public void setimageDao(ImageDao imageDao) {
		this.imageDao = imageDao;
	}
}
