package com.o2oweb.service;

import javax.annotation.Resource;

import org.hibernate.criterion.DetachedCriteria;
import org.springframework.stereotype.Component;

import com.o2oweb.bo.RequestParamBean;
import com.o2oweb.common.dao.support.Page;
import com.o2oweb.dao.Page3Dao;
import com.o2oweb.entity.Index3ainfo;

@Component("page3Service")
public class Page3Service {

	private page3Dao page3Dao;

	public void save(page3 page3) {
		this.page3Dao.save(page3);
	}

	public void remove(page3 page3) {
		this.page3Dao.remove(page3);
	}
	

	public void update(page3 page3) {
		this.page3Dao.update(page3);
	}

	public page3 getpage3(String loginMes, char type) {
		return page3Dao.getpage3(loginMes, type);
	}

	public Page findPageBean(RequestParamBean paramBean) {
		DetachedCriteria detachedCriteria = DetachedCriteria
				.forClass(page3.class);
		if (paramBean == null) {
			return null;
		}
		return this.page3Dao.pagedQuery(detachedCriteria, paramBean.getStart(),
				paramBean.getLimit());
	}

	@Resource
	public void setpage3Dao(Page3Dao page3Dao) {
		this.page3Dao = page3Dao;
	}
}
